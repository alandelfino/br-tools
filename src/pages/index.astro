---
import Layout from "../layouts/Layout.astro";
import heroBg from "../assets/background.svg";
import { Layers, ImageUpscale, Upload } from "lucide-react";
const pageTitle = "BR Tools — Otimize suas imagens com rapidez";
const description = "Ferramentas gratuitas para recortar, redimensionar e comprimir imagens em lote.";
---

<Layout title={pageTitle}>
  <header class="relative bg-slate-50">
    <div class="max-w-6xl mx-auto px-4 h-22 flex items-center justify-between">
      <div class="flex items-center gap-2">
        <div class="bg-slate-200 p-2 rounded-lg size-8 flex items-center justify-center">
          <Layers className="size-6 text-slate-600" />
        </div>
        <div class="flex gap-2 items-center">
          <span class="text-lg text-slate-700 font-bold">Kayla</span>
          <span class="text-xs text-slate-500">Tools</span>
        </div>
      </div>
      <a href="/handler/sign-in" class="px-4 py-2 rounded-md border text-sm font-medium bg-white hover:bg-neutral-50">Fazer Login</a>
    </div>
    <div class="max-w-6xl mx-auto px-4 py-16">
      <div class="grid md:grid-cols-2 gap-10 items-center">
        <div>
          <div class="flex items-center gap-3 mb-10">
            <div class="rounded-xl flex items-center justify-center">
              <ImageUpscale className="size-10 text-slate-300" />
            </div>
            <div class="flex flex-col">
              <span class="text-lg font-bold">BR Tools</span>
              <span class="text-xs text-slate-500">Suite de ferramentas gratuitas</span>
            </div>
          </div>
          <h1 class="text-2xl md:text-3xl font-extrabold text-slate-800 tracking-wide">Otimize suas imagens com rapidez</h1>
          <h3 class="text-lg font-bold tracking-wide mt-4 bg-linear-to-r from-teal-200 to-yellow-200 text-slate-900 px-4 py-2 rounded-md inline-block">Sem limites e gratuito</h3>
          <p class="mt-4 text-lg text-slate-600 max-w-2xl">Recorte, redimensione e comprima imagens em lote diretamente no navegador.</p>
          <div class="mt-8 flex gap-3">
            <a href="/tools/smart-resize-and-crop" class="border-2 border-dashed border-slate-800 text-slate-800 px-5 py-3 rounded-md text-sm font-medium flex items-center gap-2">
              <Upload className="w-4 h-4" /> Usar Smart Resize & Crop
            </a>
          </div>
        </div>
        <div class="relative">
          <div class="absolute -inset-8 bg-linear-to-r from-teal-200 to-yellow-200 blur-3xl opacity-40 rounded-3xl"></div>
          <div class="relative p-4">
            <img src="/resize-crop-illustration.png" alt="Demonstração das ferramentas de imagem" class="rounded-md w-full h-auto object-cover" />
          </div>
        </div>
      </div>
    </div>
  </header>
  
  <main>
  </main>
</Layout>
